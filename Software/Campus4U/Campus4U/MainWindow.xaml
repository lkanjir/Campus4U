<Window x:Class="Client.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campus4U"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="MainWindow_OnLoaded"
        Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
   <Grid Margin="24">
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="*"/>
       </Grid.RowDefinitions>
       
       <Border x:Name="PanelHeader" Style="{StaticResource Card}" Visibility="Collapsed"> 
           <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Images/Logo/Full.png" Height="50" RenderOptions.BitmapScalingMode="HighQuality" VerticalAlignment="Center" HorizontalAlignment="Left"></Image>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnPosts" Click="BtnPosts_OnClick"
                            Style="{StaticResource SecondaryButton}"
                            Width="140">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left">Oglasnik</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button  x:Name="BtnFault" 
                             Style="{StaticResource SecondaryButton}" 
                             IsEnabled="False"
                             Width="140">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/fault-icon.png" Height="24" Width="24" Margin="0,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock x:Name="TxtFaults" VerticalAlignment="Center" HorizontalAlignment="Left">Prijavi kvar</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnUpravljanjeKvarovima"
                        Style="{StaticResource SecondaryButton}"
                        Width="200"
                        Margin="8,0,0,0"
                        Visibility="Collapsed"
                        Click="BtnUpravljanjeKvarovima_OnClick">
                        <TextBlock Text="Upravljanje kvarovima (test)" VerticalAlignment="Center"/>
                    </Button>
                    <Button  x:Name="BtnLogout" Click="BtnLogout_OnClick" 
                        Style="{StaticResource SecondaryButton}" 
                        IsEnabled="False"
                        Width="140">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/logout-icon.png" Height="20" Margin="0,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock x:Name="TxtLogOut" VerticalAlignment="Center" HorizontalAlignment="Left">Odjava</TextBlock>
                        </StackPanel>
                    </Button>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="btnProfilKorisnika" Width="36" Height="36" Margin="12, 0,0,0"
                                 VerticalAlignment="Center" Stroke="#B0B0B0" StrokeThickness="2" Cursor="Hand"
                                 MouseLeftButtonUp="BtnProfilKorisnika_OnClick" RenderOptions.BitmapScalingMode="HighQuality"  SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ProfileImgBrush" ImageSource="/Images/Profile/default-profile.png" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel Margin="5,0,0,0">
                            <TextBlock x:Name="UserFirstLastName" Text="Pero Peric" FontWeight="Medium"></TextBlock>
                            <TextBlock x:Name="UserEmail" Text="pperic@gmail.com"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
               
           </Grid>
       </Border>
       
       <Grid Grid.Row="1" Margin="0 18 0 0 ">
           <ContentControl x:Name="RoleContent" Visibility="Collapsed"/>
           <Border x:Name="PanelSignedOut" Style="{StaticResource Card}" Padding="28">
               <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/Logo/Full.png" Height="80" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Center"/>
                    <Button x:Name="BtnLogin" Click="BtnLogin_OnClick" 
                           Width="180" Height="44"
                           Margin="0 18 0 0"
                           Style="{StaticResource PrimaryButton}">Prijava</Button>
                   <TextBlock x:Name="TxtStatus" Margin="0 12 0 0" TextAlignment="Center" Visibility="Collapsed"/>
               </StackPanel>
           </Border>
       </Grid>
   </Grid>
</Window>
