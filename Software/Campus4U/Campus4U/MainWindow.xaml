<Window x:Class="Client.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Campus4U"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="MainWindow_OnLoaded"
        Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
   <Grid Margin="24">
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"/>
           <RowDefinition Height="*"/>
       </Grid.RowDefinitions>
       
       <Border x:Name="PanelHeader" Style="{StaticResource Card}" Visibility="Collapsed"> 
           <Grid>
               <Grid.ColumnDefinitions>
                   <ColumnDefinition Width="*"/>
                   <ColumnDefinition Width="Auto"/>
               </Grid.ColumnDefinitions>
               <TextBlock Text="Campus4U" Style="{StaticResource HeadingText}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button  x:Name="BtnLogout" Click="BtnLogout_OnClick" 
                        Style="{StaticResource SecondaryButton}" 
                        IsEnabled="False"
                        Width="140">Odjava</Button>
                    <Ellipse x:Name="btnProfilKorisnika" Width="36" Height="36" Margin="12, 0,0,0"
                             VerticalAlignment="Center" Stroke="#B0B0B0" StrokeThickness="2" Cursor="Hand"
                             MouseLeftButtonUp="BtnProfilKorisnika_OnClick" RenderOptions.BitmapScalingMode="HighQuality"  SnapsToDevicePixels="True" UseLayoutRounding="True">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Images/Profile/default-profile.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </StackPanel>
               
           </Grid>
       </Border>
       
       <Grid Grid.Row="1" Margin="0 18 0 0 ">
           <ContentControl x:Name="RoleContent" Visibility="Collapsed"/>
           <Border x:Name="PanelSignedOut" Style="{StaticResource Card}" Padding="28">
               <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                   <TextBlock Text="LOGO" Margin="0 14 0 0" Style="{StaticResource HeadingText}" TextAlignment="Center"/>
                   <TextBlock Text="Campus4U" Margin="0 14 0 0" Style="{StaticResource HeadingText}" TextAlignment="Center"/>
                   <Button x:Name="BtnLogin" Click="BtnLogin_OnClick" 
                           Width="180" Height="44"
                           Margin="0 18 0 0"
                           Style="{StaticResource PrimaryButton}">Prijava</Button>
                   <TextBlock x:Name="TxtStatus" Margin="0 12 0 0" TextAlignment="Center" Visibility="Collapsed"/>
               </StackPanel>
           </Border>
       </Grid>
   </Grid>
</Window>
