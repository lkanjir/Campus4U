<Window x:Class="Client.Presentation.Views.Posts.PostsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client.Presentation.Views.Posts"
        mc:Ignorable="d"
        Title="Oglasnik" Height="800" Width="1200"
        Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterOwner"
        Loaded="PostsWindow_OnLoaded">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource Card}" Padding="12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
                    <Button x:Name="BtnNew" Height="32" Margin="0 0 8 0" Style="{StaticResource PrimaryButton}"
                            Click="BtnNew_OnClick">
                        Nova objava
                    </Button>
                    <Button x:Name="BtnEdit" Height="32" Margin="0 0 8 0"
                            Style="{StaticResource SecondaryButton}" Click="BtnEdit_OnClick" Visibility="Collapsed">
                        Uredi
                    </Button>
                    <Button x:Name="BtnDelete" Height="32"
                            Style="{StaticResource SecondaryButton}" Click="BtnDelete_OnClick" Visibility="Collapsed">
                        Obriši
                    </Button>
                </StackPanel>

                <Button x:Name="BtnRefresh" DockPanel.Dock="Top" Height="32" Margin="0 0 0 10"
                        Style="{StaticResource SecondaryButton}" Click="BtnRefresh_OnClick">
                    Osvježi
                </Button>

                <ListBox x:Name="PostsList" ItemsSource="{Binding Posts}"
                         SelectionChanged="PostsList_OnSelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4">
                                <TextBlock Text="{Binding Naslov}" FontWeight="Bold" TextWrapping="Wrap" />
                                <TextBlock Text="{Binding AutorIme}" Foreground="Gray" FontSize="12" />
                                <TextBlock Text="{Binding DatumVrijemeObjave}" Foreground="Gray" FontSize="12" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource Card}" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock x:Name="TxtTitle" FontSize="24" FontWeight="Bold" Text="Odaberi objavu" />
                <TextBlock x:Name="TxtAuthor" Grid.Row="1" Foreground="Gray" Margin="0,4,0,0" />
                <TextBlock x:Name="TxtDates" Grid.Row="2" Foreground="Gray" Margin="0,4,0,12" />

                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="TxtBody" TextWrapping="Wrap"></TextBlock>
                </ScrollViewer>

                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 12 0 0">
                    <Button x:Name="BtnToggleInterests" Width="140" Height="34" Style="{StaticResource PrimaryButton}"
                            Click="BtnToggleInterests_OnClick">
                        Zanima me
                    </Button>
                    <TextBlock x:Name="TxtInterestStatus" Margin="12 6 0 0" Foreground="Gray" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>