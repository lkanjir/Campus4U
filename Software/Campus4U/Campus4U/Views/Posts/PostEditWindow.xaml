<Window x:Class="Client.Presentation.Views.Posts.PostEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client.Presentation.Views.Posts"
        mc:Ignorable="d"
        Title="Objava" Height="550" Width="800" Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Naslov" FontWeight="Bold"></TextBlock>
        <TextBox x:Name="TxtTitle" Grid.Row="1" Height="32" Margin="0 6 0 12" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 12">
            <StackPanel Width="220">
                <TextBlock Text="Datum događaja" FontWeight="Bold"></TextBlock>
                <DatePicker x:Name="DpDate" Margin="0 6 0 0"></DatePicker>
            </StackPanel>
            <StackPanel Width="120" Margin="12,0,0,0">
                <TextBlock Text="Vrijeme (HH:mm)" FontWeight="Bold" />
                <TextBox x:Name="TxtTime" Height="24" Margin="0,6,0,0" />
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" Margin="10 0 0 0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnSelectImage" Height="30" Width="140"
                            Style="{StaticResource SecondaryButton}" Click="BtnSelectImage_OnClick">
                        Odaberi sliku
                    </Button>
                    <TextBlock x:Name="TxtSelectedImage" Margin="12,6,0,0" Foreground="Gray" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="Sadržaj" FontWeight="Bold" />
        <TextBox x:Name="TxtBody" Grid.Row="3" Margin="0,24,0,0"
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnCancel" Width="120" Height="34" Margin="0,0,8,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnCancel_OnClick">
                Odustani
            </Button>
            <Button x:Name="BtnSave" Width="120" Height="34"
                    Style="{StaticResource PrimaryButton}" Click="BtnSave_OnClick">
                Spremi
            </Button>
        </StackPanel>
    </Grid>
</Window>