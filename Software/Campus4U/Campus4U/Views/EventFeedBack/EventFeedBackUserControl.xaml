<UserControl x:Class="Client.Presentation.Views.EventFeedBack.EventFeedBackUserControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Presentation.Views.EventFeedBack"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Ostavite komentar i ocjenu" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"></TextBlock>

                <Border Grid.Row="1" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="4">
                    <TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="10" BorderThickness="0" Padding="8"></TextBox>
                </Border>

                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Ocjena:" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox Width="60" FontSize="12">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                    </StackPanel>
                    <Button Grid.Column="2" Content="PoÅ¡alji" Style="{StaticResource PrimaryButton}"/>
                </Grid>
            </Grid>

            <TextBlock Margin="20,0,20,8" Text="Komentari" FontSize="14" FontWeight="Bold"/>

            <ScrollViewer Margin="20,0,20,20" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ElementName=Root, Path=Comments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource Card}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Ocjena, StringFormat=Ocjena: {0}}"/>
                                    <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" Text="{Binding Komentar}"/>
                                    <TextBlock Margin="0,6,0,0" Foreground="{StaticResource BrushMuted}"
                                               Text="{Binding Datum, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
