<UserControl x:Class="Client.Presentation.Views.EventFeedBack.EventFeedBackUserControl"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Presentation.Views.EventFeedBack"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Ostavite komentar i ocjenu" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"></TextBlock>

                <Border Grid.Row="1" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="4">
                    <TextBox x:Name="txtKomentar" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="10" BorderThickness="0" Padding="8"></TextBox>
                </Border>

                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                    </Grid>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Ocjena:" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cboOcjena" Width="60" FontSize="12">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                    </StackPanel>
                    <Button x:Name="btnDodajKomentar" Grid.Column="2" Content="Dodaj" Style="{StaticResource PrimaryButton}" Height="36" VerticalAlignment="Center" HorizontalAlignment="Left" Width="67" Click="btnDodajKomentar_Click"/>
                </Grid>
        </Grid>

        <TextBlock Grid.Row="1" Margin="20,0,20,8" Text="Komentari" FontSize="17" FontWeight="Bold"/>

        <ScrollViewer Grid.Row="2" Margin="20,0,20,20" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ElementName=Root, Path=Comments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource Card}" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock FontWeight="SemiBold" FontSize="15" Text="{Binding ImePrezime}"/>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Foreground="{StaticResource BrushMuted}"
                                                   Text="{Binding Datum, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                                        <Button Content="Obrisi" Margin="0,4,0,0" Padding="6,2" FontSize="11"
                                                Click="btnObrisiKomentar_Click">
                                            <Button.Visibility>
                                                <Binding Path="MojKomentar" Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                            </Button.Visibility>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Margin="0,4,0,0" FontSize="12" Text="{Binding Ocjena, StringFormat=Ocjena: {0}}"/>
                                <TextBlock Margin="0,6,0,0" FontSize="12" TextWrapping="Wrap" Text="{Binding Komentar}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
