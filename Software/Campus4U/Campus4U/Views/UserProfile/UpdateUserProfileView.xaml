<Window x:Class="Client.Presentation.Views.UserProfile.UpdateUserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Presentation.Views.UserProfile"
        mc:Ignorable="d"
        Title="UpdateUserProfile"
        SizeToContent="WidthAndHeight" Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="30,15,30,30">
        <TextBlock FontSize="30" FontWeight="Bold">Uredi profil korisnika</TextBlock>

        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="16">Ime: </TextBlock>
            <TextBox x:Name="TxtIme" Width="200" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock FontSize="16">Prezime:</TextBlock>
            <TextBox x:Name="TxtPrezime" Width="200" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock FontSize="16">Korisničko ime:</TextBlock>
            <TextBox x:Name="TxtKorIme" Width="200" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock FontSize="16">Email:</TextBlock>
            <TextBox x:Name="TxtEmail" Width="200" Margin="10,0,0,0" IsReadOnly="True" IsTabStop="False" IsEnabled="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock FontSize="16">Broj telefona:</TextBlock>
            <TextBox x:Name="TxtBrojTelefona" Width="200" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock FontSize="16">Broj sobe:</TextBlock>
            <TextBox x:Name="TxtBrojSobe" Width="200" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnSpremi" 
                    Width="120" Height="36"
                    Style="{StaticResource PrimaryButton}" Click="BtnSpremi_Click">Spremi</Button>
            <Button x:Name="BtnOdustani" 
                    Width="120" Height="36"
                    Margin="36,0,0,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnOdustani_Click">Odustani</Button>
        </StackPanel>
    </StackPanel>
</Window>
