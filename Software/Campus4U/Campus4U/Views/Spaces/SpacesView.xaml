<Window x:Class="Client.Presentation.Views.Spaces.SpacesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Presentation.Views.Spaces"
        mc:Ignorable="d"
        Title="Prostori"
        Height="600"
        Width="900"
        Background="{StaticResource BrushBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Content="← Nazad"
                Click="BtnBack_Click"
                HorizontalAlignment="Left"
                Width="100"
                Height="35"
                Margin="0,0,0,10"
                Background="Transparent"
                Foreground="#555"
                FontWeight="Bold"
                FontSize="16"
                BorderThickness="2"
                BorderBrush="#555"
                Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="12"
                Margin="0,0,0,20"
                HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12"
                                  ShadowDepth="3"
                                  Opacity="0.15"
                                  Color="#AAAFB5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtFilter"
                         Grid.Column="0"
                         Height="36"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Padding="10,0"
                         Margin="0,0,10,0"
                         TextChanged="TxtFilter_TextChanged"/>

                <Button Grid.Column="1"
                        Height="36"
                        Content="Filtriraj"
                        Click="BtnFilter_Click"
                        Style="{StaticResource PrimaryButton}"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="2"
                        Height="36"
                        Content="Očisti"
                        Click="BtnClearFilter_Click"
                        Style="{StaticResource SecondaryButton}"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,10,0,0">

            <ItemsControl x:Name="GridProstori">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260"
                                Height="320"
                                Margin="15"
                                Background="White"
                                CornerRadius="12">

                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="270"
                                                  ShadowDepth="4"
                                                  Opacity="0.2"
                                                  Color="#AAAFB5"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="160"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="60"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        CornerRadius="12,12,12,0"
                                        ClipToBounds="True">
                                    <Grid>
                                        <Image Source="{Binding SlikaPutanja}"
                                               Stretch="UniformToFill"/>

                                        <Border VerticalAlignment="Bottom"
                                                Height="60">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0"
                                                                     EndPoint="0,1">
                                                    <GradientStop Color="Transparent"
                                                                  Offset="0"/>
                                                    <GradientStop Color="#CC000000"
                                                                  Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>

                                        <TextBlock Text="{Binding Naziv}"
                                                   Foreground="White"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Bottom"
                                                   Margin="15,0,0,10"/>
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Row="1"
                                            Margin="15,10,7,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Dom}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333"
                                                   FontSize="14"
                                                   Grid.Column="0"/>

                                        <Image Source="{Binding FavoriteIconPath}"
                                               Height="20"
                                               Margin="0,0,15,10"
                                               Grid.Column="1"
                                               Cursor="Hand"
                                               MouseLeftButtonDown="BtnToggleFavorite_MouseLeftButtonDown"/>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,5">
                                        <TextBlock Text="Kapacitet: "
                                                   Foreground="#b11226"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Kapacitet}"
                                                   Foreground="#555"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Oprema}"
                                               FontSize="12"
                                               Foreground="Gray"
                                               TextTrimming="CharacterEllipsis"
                                               MaxHeight="35"/>
                                </StackPanel>

                                <Button Grid.Row="2"
                                        Content="Rezerviraj"
                                        Width="150"
                                        Height="35"
                                        Style="{StaticResource PrimaryButton}"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        VerticalAlignment="Center"
                                        Click="BtnRezerviraj_Click"
                                        CommandParameter="{Binding}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
