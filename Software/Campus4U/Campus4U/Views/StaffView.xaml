<UserControl x:Class="Client.Presentation.Views.StaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Client.Presentation.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
            <Border Style="{StaticResource Card}" Padding="24"
                HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Dobrodosli!" Style="{StaticResource HeadingText}"
                           HorizontalAlignment="Center"/>
                    <TextBlock Margin="0 10 0 0" TextAlignment="Center">
                    Prikaz pocetnog ekrana za osoblje
                    </TextBlock>
                    <Button x:Name="BtnEventFeedback"
                        Click="BtnEventFeedback_OnClick"
                        Margin="0 18 0 0"
                        Width="220"
                        Style="{StaticResource PrimaryButton}">
                        Pregled komentara
                    </Button>
                </StackPanel>
            </Border>
</UserControl>
