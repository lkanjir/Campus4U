<UserControl x:Class="Client.Presentation.Views.OnboardingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Client.Presentation.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Border Style="{StaticResource Card}" Padding="28"
            HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Style="{StaticResource HeadingText}">Dovrši registraciju</TextBlock>
            <TextBlock>Unesi ime i prezime kako bi dovršio registraciju</TextBlock>

            <TextBlock Margin="0 15 0 0">Ime</TextBlock>
            <TextBox x:Name="TxtIme" Margin="0 5 0 0"></TextBox>

            <TextBlock Margin="0 10 0 0 ">Prezime</TextBlock>
            <TextBox x:Name="TxtPrezime" Margin="0 5 0 0"></TextBox>

            <TextBlock Margin="0 10 0 0 ">Korisničko ime (opcionalno)</TextBlock>
            <TextBox x:Name="TxtKorIme" Margin="0 5 0 0"></TextBox>

            <TextBlock Margin="0 10 0 0 ">Email</TextBlock>
            <TextBox x:Name="TxtEmail" Margin="0 5 0 0" IsReadOnly="True"></TextBox>

            <TextBlock Margin="0 10 0 0 ">Broj sobe (opcionalno)</TextBlock>
            <TextBox x:Name="TxtSoba" Margin="0 5 0 0"></TextBox>

            <TextBlock Margin="0 10 0 0 ">Broj Telefona (opcionalno)</TextBlock>
            <TextBox x:Name="TxtBrojTelefona" Margin="0 5 0 0"></TextBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Margin="0 10 0 0 " Grid.Column="0">Profilna slika (opcionalno)</TextBlock>
                <Image x:Name="BtnProfileImageOnBorading" Grid.Column="1" Source="/Images/upload-image.png" Width="30" Margin="0 5 0 0" Cursor="Hand" HorizontalAlignment="Right" MouseLeftButtonDown="BtnProfileImageOnBorading_MouseLeftButtonDown"></Image>
            </Grid>

            <Button HorizontalAlignment="Right" x:Name="BtnSave" Click="BtnSave_OnClick"
                    Style="{StaticResource PrimaryButton}" Margin="0 10 0 0">
                Spremi
            </Button>

            <TextBlock x:Name="TxtStatus" Margin="0 25 0 0 " Visibility="Collapsed" TextAlignment="Center" />

        </StackPanel>

    </Border>
</UserControl>