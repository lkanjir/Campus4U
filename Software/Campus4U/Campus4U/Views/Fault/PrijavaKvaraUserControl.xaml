<UserControl x:Class="Client.Presentation.Views.Fault.PrijavaKvaraUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500"
             Loaded="UserControl_Loaded">

    <Grid>
        <ScrollViewer x:Name="PanelForma" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <TextBlock Grid.Row="0" Text="Prijava kvara" FontWeight="Bold" FontSize="30"
                           Style="{StaticResource HeadingText}" Margin="0,0,0,20"/>

                <Border Grid.Row="1" Style="{StaticResource Card}" Padding="24"
                        VerticalAlignment="Top" MaxWidth="450">
                    <StackPanel>

                        <TextBlock x:Name="TxtUcitavanje" Text="Učitavanje podataka..."
                                   Visibility="Collapsed" HorizontalAlignment="Center"
                                   Margin="0,0,0,16" Foreground="{StaticResource BrushMuted}"/>

                        <TextBlock Text="Prostor" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <ComboBox x:Name="CmbProstor" DisplayMemberPath="Naziv"
                                  SelectedValuePath="ProstorId" Height="36"/>

                        <TextBlock Text="Vrsta kvara" FontWeight="SemiBold" Margin="0,16,0,6"/>
                        <ComboBox x:Name="CmbVrstaKvara" DisplayMemberPath="Naziv"
                                  SelectedValuePath="VrstaKvaraId" Height="36"/>

                        <TextBlock Text="Opis problema" FontWeight="SemiBold" Margin="0,16,0,6"/>
                        <TextBox x:Name="TxtOpis" Height="100" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                        <TextBlock Text="Fotografija (opcionalno)" FontWeight="SemiBold" Margin="0,16,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnDodajSliku" Content="Odaberi sliku"
                                    Style="{StaticResource SecondaryButton}" Click="BtnDodajSliku_Click"/>
                            <Button x:Name="BtnUkloniSliku" Content="Ukloni" Margin="8,0,0,0"
                                    Style="{StaticResource SecondaryButton}" Click="BtnUkloniSliku_Click"
                                    Visibility="Collapsed"/>
                        </StackPanel>
                        <Border x:Name="BorderSlika" Margin="0,10,0,0" Visibility="Collapsed"
                                BorderBrush="{StaticResource BrushMuted}" BorderThickness="1"
                                CornerRadius="4" Padding="4">
                            <Image x:Name="ImgPreview" MaxHeight="150" Stretch="Uniform"/>
                        </Border>

                        <Grid Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="TxtStatus" Grid.Column="0" VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushMuted}" TextWrapping="Wrap"/>

                            <Button x:Name="BtnPosalji" Grid.Column="1" Content="Pošalji prijavu"
                                    Style="{StaticResource PrimaryButton}" Click="BtnPosalji_Click"/>
                        </Grid>

                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <Grid x:Name="PanelUspjeh" Visibility="Collapsed">
            <Border Style="{StaticResource Card}" Padding="40"
                    HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="400">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="✓" FontSize="60" Foreground="{StaticResource BrushPrimary}"
                               HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="Prijava uspješno poslana!" FontSize="22" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Vaša prijava kvara je zaprimljena. Osoblje će je pregledati u najkraćem mogućem roku."
                               TextWrapping="Wrap" TextAlignment="Center" Foreground="{StaticResource BrushMuted}"
                               Margin="0,0,0,24"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnNovaPrijava" Content="Nova prijava"
                                Style="{StaticResource PrimaryButton}" Click="BtnNovaPrijava_Click"
                                Margin="0,0,12,0"/>
                        <Button x:Name="BtnPovratak" Content="Početni zaslon"
                                Style="{StaticResource PrimaryButton}" Click="BtnPovratak_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
