<UserControl x:Class="Client.Presentation.Views.Fault.UpravljanjeKvarovimaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ReadOnlyDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
            <Style.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Foreground" Value="{StaticResource BrushMuted}"/>
            <Style.Triggers>
                <Trigger Property="SelectedIndex" Value="-1">
                    <Setter Property="Foreground" Value="{StaticResource BrushMuted}"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource BrushBlack}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Upravljanje kvarovima" FontWeight="Bold" FontSize="28"
                       Style="{StaticResource HeadingText}" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnOsvjezi" Content="Osvježi"
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnOsvjezi_Click" Margin="0,0,8,0"/>
                <Button x:Name="BtnExport" Content="Export"
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnExport_Click"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource Card}" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Filteri" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,16"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

          
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,12">
                        <TextBlock Text="Status" Foreground="{StaticResource BrushMuted}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="CmbStatus" Style="{StaticResource FilterComboBox}" Text="Odaberi status..."
                                  SelectionChanged="Filter_Changed"/>
                    </StackPanel>


                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,12,12">
                        <TextBlock Text="Prostor" Foreground="{StaticResource BrushMuted}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="CmbProstor" Style="{StaticResource FilterComboBox}"
                                  DisplayMemberPath="Naziv" SelectedValuePath="ProstorId" Text="Odaberi prostor..."
                                  SelectionChanged="Filter_Changed"/>
                    </StackPanel>


                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,12">
                        <TextBlock Text="Vrsta kvara" Foreground="{StaticResource BrushMuted}" Margin="0,0,0,4"/>
                        <ComboBox x:Name="CmbVrstaKvara" Style="{StaticResource FilterComboBox}"
                                  DisplayMemberPath="Naziv" SelectedValuePath="VrstaKvaraId" Text="Odaberi vrstu..."
                                  SelectionChanged="Filter_Changed"/>
                    </StackPanel>


                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,12,0">
                        <TextBlock Text="Datum prijave" Foreground="{StaticResource BrushMuted}" Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <DatePicker x:Name="DpOd" Style="{StaticResource ReadOnlyDatePicker}" Margin="0,0,6,0"
                                        SelectedDateChanged="Filter_DateChanged"/>
                            <DatePicker x:Name="DpDo" Grid.Column="1" Style="{StaticResource ReadOnlyDatePicker}" Margin="6,0,0,0"
                                        SelectedDateChanged="Filter_DateChanged"/>
                        </Grid>
                    </StackPanel>

                   
                    <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Button x:Name="BtnPonisti" Content="Poništi"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnPonisti_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        
        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="DgKvarovi"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          Background="Transparent"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          SelectionUnit="FullRow"
                          AlternationCount="2"
                          MouseDoubleClick="DgKvarovi_MouseDoubleClick">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BrushBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource BrushMuted}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="#FAFAFA"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F4FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="12,8"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F4FD"/>
                                    <Setter Property="Foreground" Value="{StaticResource BrushBlack}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Prostor" Binding="{Binding ProstorNaziv}" Width="*"/>
                        <DataGridTextColumn Header="Vrsta kvara" Binding="{Binding VrstaKvaraNaziv}" Width="*"/>
                        <DataGridTextColumn Header="Datum prijave" Binding="{Binding DatumPrijave, StringFormat=d.M.yyyy.}" Width="120"/>

                        
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="StatusBorder" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" MinWidth="75">
                                        <TextBlock x:Name="StatusText" Text="{Binding Status}" FontSize="12" FontWeight="Medium" TextAlignment="Center"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Aktivan">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#FEF3C7"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#92400E"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="U obradi">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#DBEAFE"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#1E40AF"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Riješen">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#D1FAE5"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#065F46"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                       
                        <DataGridTemplateColumn Header="Akcija" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="•••"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Cursor="Hand"
                                            Padding="0"
                                            HorizontalAlignment="Center"
                                            Click="BtnAkcija_Click"
                                            Tag="{Binding KvarId}">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Detalji" Click="MenuDetalji_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                
                <TextBlock x:Name="TxtStatus" Grid.Row="0"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="{StaticResource BrushMuted}" FontSize="14"
                           Visibility="Collapsed"/>

               
                <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BrushBorder}" Padding="12,8">
                    <TextBlock x:Name="TxtBrojKvarova" Foreground="{StaticResource BrushMuted}" FontSize="12"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
