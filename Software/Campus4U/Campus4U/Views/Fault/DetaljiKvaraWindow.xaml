<Window x:Class="Client.Presentation.Views.Fault.DetaljiKvaraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Detalji kvara"
        Height="520" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BrushBackground}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtNaslov" Text="Detalji kvara #0"
                       FontWeight="Bold" FontSize="24"
                       Style="{StaticResource HeadingText}" VerticalAlignment="Center"/>

            <Button Grid.Column="1" Content="Zatvori"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnZatvori_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Osnovne informacije" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,16"/>

                    <TextBlock Text="Prostor:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,2"/>
                    <TextBlock x:Name="TxtProstor" Text="-" FontSize="14" Margin="0,0,0,12"/>

                    <TextBlock Text="Vrsta kvara:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,2"/>
                    <TextBlock x:Name="TxtVrstaKvara" Text="-" FontSize="14" Margin="0,0,0,12"/>

                    <TextBlock Text="Datum prijave:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,2"/>
                    <TextBlock x:Name="TxtDatumPrijave" Text="-" FontSize="14" Margin="0,0,0,12"/>

                    <TextBlock Text="Prijavio:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,2"/>
                    <TextBlock x:Name="TxtPrijavio" Text="-" FontSize="14" Margin="0,0,0,12"/>

                    <TextBlock Text="Trenutni status:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,4"/>
                    <Border x:Name="BorderStatus" CornerRadius="4" Padding="10,5" HorizontalAlignment="Left" MinWidth="80">
                        <TextBlock x:Name="TxtStatus" Text="-" FontSize="12" FontWeight="Medium" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource Card}" Margin="10,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Opis problema" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="TxtOpis" Text="-" TextWrapping="Wrap" FontSize="14"
                                       Foreground="{StaticResource BrushMuted}"/>
                        </ScrollViewer>

                        <Button x:Name="BtnFotografija" Grid.Row="2"
                                HorizontalAlignment="Left" Margin="0,12,0,0"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnFotografija_Click"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Fotografija" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource Card}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Promjena statusa" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12"/>

                        <TextBlock Text="Novi status:" Foreground="{StaticResource BrushMuted}" FontSize="12" Margin="0,0,0,4"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="CmbNoviStatus" Height="32" Margin="0,0,12,0"/>

                            <Button Grid.Column="1" x:Name="BtnSpremi" Content="Spremi"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnSpremi_Click"/>
                        </Grid>

                        <TextBlock x:Name="TxtPoruka" Margin="0,8,0,0" FontSize="12"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
